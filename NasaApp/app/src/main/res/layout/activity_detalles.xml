<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="irolso.com.nasaapp.ActivityDetalles"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarDetails"
        android:background="@color/colorPrimary"
        android:elevation="8dp">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        tools:context="irolso.com.nasaapp.ActivityDetalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sizeImageList"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imageNasaListDetalle"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sizeImageList"
                    android:scaleType="fitXY"
                    fresco:actualImageScaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/titleNasaListDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textAlignment="textStart"
                    android:layout_gravity="bottom|start"
                    android:textColor="@color/blanco"
                    android:textSize="22dp"
                    android:padding="16dp"
                    android:layout_alignParentBottom="true"
                    android:elevation="20dp"
                    android:translationZ="20dp"/>
            </RelativeLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:padding="16dp">
        <TextView
            android:id="@+id/fullNameContentDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textAlignment="textStart"
            android:layout_gravity="bottom|start"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:padding="16dp"
            android:elevation="20dp"
            android:translationZ="20dp"/>

        <TextView
            android:id="@+id/nasaFechaDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="12dp"
            android:padding="12dp"
            />

    </android.support.v7.widget.CardView>

</LinearLayout>
