<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:translationZ="10dp"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageNasaList"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_apod_item"
                android:scaleType="centerCrop"
                android:elevation="20dp"
                android:src="@drawable/logo_adventure">
                </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_apod_item"
                android:orientation="vertical"
                android:elevation="25dp"
                android:gravity="center">

            <irolso.com.lifesadventure.CustomsElements.TextViewBlack
                android:id="@+id/descriptionImagenTravel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:translationZ="20dp"/>

            <View
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/descriptionImagenTravel"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:id="@+id/separator"
                android:visibility="visible"
                android:background="@color/white"

                />
                <irolso.com.lifesadventure.CustomsElements.TextViewMedium
                    android:id="@+id/descriptionImagenTravel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:translationZ="20dp"/>

            </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_apod_item"
            android:background="@drawable/gradienteviaje"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            android:elevation="20dp"
            android:alpha="0.8">
        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:elevation="25dp">
                <irolso.com.lifesadventure.CustomsElements.TextViewBlack
                    android:id="@+id/priceTravel"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:paddingLeft="8dp"
                    />

                <irolso.com.lifesadventure.CustomsElements.TextViewMedium
                    android:id="@+id/dateTravel"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textAlignment="textEnd"
                    android:textSize="14dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
